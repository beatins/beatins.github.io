<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>SW Tumblr Blog Display</name>
	<author>Muhammad Riduan</author>
	<creationDate>October, 2013</creationDate>
	<copyright>Copyright - Social Widgets</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@socialwidgets.net</authorEmail>
	<authorUrl>http://socialwidgets.net/</authorUrl>
	<version>1.0</version>
	<description>Thanks for installing SW Tumblr Blog Display</description> 
	<files>
		<folder>style</folder>
		<folder>tmpl</folder>
		<filename module="mod_sw_tumblrblogdisplay">mod_sw_tumblrblogdisplay.php</filename>
		<filename>index.html</filename>
		<filename>mod_sw_tumblrblogdisplay.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="blogURL"
					type="text"
					default="peacecorps.tumblr.com"
					label="Tumblr Blog URL" 
					description="Put your tumblr blog url here." />
				<field
					name="apiKey"
					type="text"
					default="fuiKNFp9vQFvjLNvx4sUwti4Yb5yGutBN4Xh10LXZhhRKjWlV4"
					label="API Key"
					description="Tumblr Blog API Key here." />
				<field
					name="width"
					type="text"
					default="450"
					label="Width"
					description="Width of your module in pixel" />
				<field
					name="limit"
					type="text"
					default="6"
					label="Post Limit"
					description="Post limit you want to show" />
				<field
					name="textLimit"
					type="text"
					default="35"
					label="Description Text Limit"
					description="Description Text Limit" />
				<field
					name="readMore"
					type="list"
					default="true"
					label="Show Read More"
					description="How or Hide Read More">
					<option value="true">Show</option>
					<option value="false">Hide</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					default=""
					label="Module Suffix"
					description="Module Suffix" />
			</fieldset>
		</fields>
	</config>
</extension>